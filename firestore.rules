rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserAccountId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId;
    }
    
    function isSystemOwner() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    
    function isAccountMember(accountId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/accounts/$(accountId)/members/$(request.auth.uid));
    }
    
    function getUserRoleInAccount(accountId) {
      return get(/databases/$(database)/documents/accounts/$(accountId)/members/$(request.auth.uid)).data.role;
    }
    
    function isAccountAdmin(accountId) {
      return isSystemOwner() || 
             (isAccountMember(accountId) && getUserRoleInAccount(accountId) == 'admin');
    }
    
    // Accounts collection
    match /accounts/{accountId} {
      allow read: if isAccountMember(accountId) || isSystemOwner();
      allow create: if isSystemOwner();
      allow update, delete: if isAccountAdmin(accountId);
      
      // Account members
      match /members/{userId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow write: if isAccountAdmin(accountId);
      }
      
      // Business profile
      match /businessProfile/profile {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow write: if isAccountAdmin(accountId);
      }
      
      // Projects
      match /projects/{projectId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow create: if isAccountMember(accountId);
        allow update, delete: if isAccountMember(accountId);
      }
      
      // Items
      match /items/{itemId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow create: if isAccountMember(accountId);
        allow update, delete: if isAccountMember(accountId);
      }
      
      // Transactions
      match /transactions/{transactionId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow create: if isAccountMember(accountId);
        allow update, delete: if isAccountMember(accountId);
        
        // Allow inventory allocation maintenance without full overwrite
        allow update: if isAccountMember(accountId) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'item_ids','last_updated','amount','status','payment_method','transaction_date','notes'
          ]);
      }
      
      // Settings (tax presets)
      match /settings/{settingId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow write: if isAccountAdmin(accountId);
      }
      
      // Audit logs
      match /audit_logs/{auditId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow create: if isAccountMember(accountId);
      }
      
      match /transaction_audit_logs/{auditId} {
        allow read: if isAccountMember(accountId) || isSystemOwner();
        allow create: if isAccountMember(accountId);
      }
    }
    
    // Users collection (top-level)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if request.auth.uid == userId || isSystemOwner();
    }
    
    // Invitations collection (top-level)
    match /invitations/{invitationId} {
      allow read: if isAuthenticated();
      allow create: if isAccountAdmin(getUserAccountId());
      allow update: if isAuthenticated();
    }
    
    // Legacy collections (for backward compatibility during migration)
    match /projects/{projectId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    match /items/{itemId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    match /transactions/{transactionId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    match /business_inventory/{itemId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    match /projects/{projectId}/items/{itemId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    match /projects/{projectId}/transactions/{transactionId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    match /settings/{settingId} {
      allow read, write: if isAuthenticated();
    }
    
    match /audit_logs/{auditId} {
      allow read, write: if isAuthenticated();
    }
    
    match /transaction_audit_logs/{auditId} {
      allow read, write: if isAuthenticated();
    }
    
    // No anonymous access allowed for any other documents
    match /{document=**} {
      allow read, write: if false; // Block all access by default
    }
  }
}
