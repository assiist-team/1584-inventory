rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access for all files (for displaying uploaded images)
    allow read: if true;

    // Allow authenticated users to upload to project-specific paths
    match /{projectName}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Fallback: Allow authenticated users to write anywhere (as backup)
    allow write: if request.auth != null;
  }
}
