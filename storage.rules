rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserAccountId() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.accountId;
    }
    
    function isSystemOwner() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    
    function isAccountAdmin(accountId) {
      return isSystemOwner() || 
             (firestore.exists(/databases/(default)/documents/accounts/$(accountId)/members/$(request.auth.uid)) &&
              firestore.get(/databases/(default)/documents/accounts/$(accountId)/members/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Business logo uploads
    match /accounts/{accountId}/business_profile/logo/{fileName} {
      allow read: if true; // Public read for logos
      allow write: if isAuthenticated() && isAccountAdmin(accountId);
    }
    
    // Existing image paths (maintain backward compatibility)
    match /{projectName}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Fallback: Allow authenticated users to read and write
    allow read: if isAuthenticated();
    allow write: if isAuthenticated();
  }
}
